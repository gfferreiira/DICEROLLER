<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DICEROLLER.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="180,0"
            Spacing="25">
          
          

            <Label
                Text="ROLADOR DE DADOS"
                Style="{StaticResource Headline}"
                FontSize="Large"
                Margin="0,60,0,100"
                />


                <Label 
                Text="0"             
                 Style="{StaticResource Headline}"
                  FontSize="Header"
                   x:Name="SpinCountLabel"
                            />

            <Picker    Title="Quantidade de Lados">
                <Picker.Items>
                    <x:String> 4 </x:String>
                    <x:String>6</x:String>
                    <x:String>10</x:String>
                    <x:String>20</x:String>
                    <x:String>100</x:String>


                </Picker.Items>
            </Picker>


            <Button
                Text="ROLAR O DADO" 
                    FontSize="Body"
                WidthRequest="300"
                   HorizontalOptions="CenterAndExpand"
                x:Name="BtnSpin"
                Clicked="BtnSpin_Clicked"
                />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
